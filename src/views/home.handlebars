            <a href="/api/products/allProducts/{{../filtro}}/{{../parametro}}/?limit={{../limit}}&page={{this}}"
                class="px-4 py-2 text-m font-semibold text-gray-400 hover:bg-gray-50 ">{{this}}</a>
            {{/each}}
            {{/if}}
            {{else}}
            {{#each pages}}
            <a href="/api/products/allProducts/?limit={{../limit}}&page={{this}}"
                class="px-4 py-2 text-m font-semibold text-gray-400 hover:bg-gray-50  ">{{this}}</a>
            {{/each}}
