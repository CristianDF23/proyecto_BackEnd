            <h3 class="mt-4 ml-4 text-xl text-gray-700">{{this.title}}</h3>
            <p class="mt-4 mb-2 ml-4 text-2xl font-medium text-green-400">$ {{this.money}}</p>
        </a>
        {{/each}}
    </div>

    {{!--NAVEGACION DE PAGINAS--}}
    <div class="mx-auto flex items-center justify-around w-1/2 mt-10 float-center">
