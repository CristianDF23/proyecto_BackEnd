<div
    class="relative isolate flex items-center gap-x-6 overflow-hidden h-10 bg-slate-900 px-6 py-2.5 sm:px-3.5 sm:before:flex-1">
    <div class="w-3/4 flex gap-8 px-8 items-center justify-between">
        <h3 class="ml-28 text-white">
            Envío gratis a partir de $60.000
        </h3>
        <div class="flex gap-4">
            {{#if userInform}}
            <a href="/api/auth/logout" class="text-white hover:text-gray-400">Cerrar Sesión</a>
            {{else}}
            <a href="/api/users/registerUser" class="text-white hover:text-gray-400">Crear Cuenta</a>
            <p class="text-white">|</p>
            <a href="/api/users/loginUser" class="text-white hover:text-gray-400">Iniciar Sesión</a>
            {{/if}}
        </div>
    </div>
</div>

<nav class="bg-white mb-10 border-b-gray-200 border dark:bg-gray-900">

    {{!--LOGO--}}
    <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
        <a href="/api/products/allProducts" class="flex items-center space-x-3 rtl:space-x-reverse">
            <img src="/img/logo.png" class="h-10" alt="CSport" />
            <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">CSport</span>
        </a>
        <div class="flex items-center md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
            {{!--USER BUTTON --}}
            {{#if userInform}}
            <a href="/api/users/profileUser"><svg xmlns="http://www.w3.org/2000/svg" width="32" height="32"
                    fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                    <path
                        d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z" />
                </svg>
            </a>
            {{/if}}
            {{!-- BUTTON CART --}}
            {{#if userInform}}
            <a href="/api/carts/{{cartId}}" class="block px-1 py-1 text-sm text-gray-700">
                <button type="button" class="relative ml-5 inline-flex p-2 items-center text-black">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor"
                        class="bi bi-cart2" viewBox="0 0 16 16">
                        <path
                            d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l1.25 5h8.22l1.25-5zM5 13a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0" />
                    </svg>
                    <span class="sr-only">Notifications</span>
                    {{#if quantity}}
                    <div
                        class="absolute inline-flex items-center justify-center w-6 h-6 text-xs font-bold text-white bg-[#0071ae] border-2 border-white rounded-full -top-1 -end-1 dark:border-gray-900">
                        {{quantity}}</div>
                    {{/if}}
                </button></a>
                {{/if}}
            <button data-collapse-toggle="navbar-user" type="button"
                class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
                aria-controls="navbar-user" aria-expanded="false">
                <span class="sr-only">Open main menu</span>
                <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                    viewBox="0 0 17 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M1 1h15M1 7h15M1 13h15" />
                </svg>
            </button>
        </div>
        {{!--LINS DE NAVEGACION--}}
        <div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-user">
            <ul
                class="flex flex-col font-medium p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700">
                <li>
                    <a href="/api/products/allProducts/" class="link block py-2 px-3 text-gray-900">INICIO</a>
                </li>
                <li>
                    <a href="/api/products/allProducts/category/Zapatillas/"
                        class="link block py-2 px-3 text-gray-900 font-semibold">ZAPATILLAS</a>
                </li>
                <li>
                    <a href="/api/products/allProducts/category/Botines/"
                        class="link block py-2 px-3 text-gray-900 font-semibold">BOTINES</a>
                </li>
                <li>
                    <a href="/api/products/allProducts/category/Indumentaria/"
                        class="link block py-2 px-3 text-gray-900 font-semibold">INDUMENTARIA</a>
                </li>
                <li>
                    <a href="#" class="link block py-2 px-3 text-gray-900 ">CONTACTO</a>
                </li>
            </ul>
        </div>
